<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    配置User对象创建-->
    <bean id="user" class="com.atguigu.spring5.User"></bean>

<!--    1、创建对象-->
<!--    2、无残构造注入属性-->
    <bean id="book" class="com.atguigu.spring5.Book">
        <property name="bname" value="葵花宝典"></property>
        <property name="bauthor" value="花无缺"></property>
    </bean>

<!--    3、有参构造注入-->
    <bean id="orders" class="com.atguigu.spring5.Orders">
        <constructor-arg name="oname" value="手机"></constructor-arg>
        <constructor-arg name="address" value="岛国"></constructor-arg>
    </bean>

    <bean id="orders2" class="com.atguigu.spring5.Orders">
        <constructor-arg name="oname" value="手机"></constructor-arg>
        <constructor-arg name="address" >
            <null></null>
        </constructor-arg>
    </bean>

    <bean id="orders3" class="com.atguigu.spring5.Orders" p:oname="九阴真经" p:address="南极">
    </bean>
</beans>