<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--   注入外部bean -->
    <bean id="userDaoImpl" class="com.atguigu.spring5.dao.UserDaoImpl"></bean>
    <bean id="userService" class="com.atguigu.spring5.service.UserService">
        <property name="userDao" ref="userDaoImpl"></property>
    </bean>

    <!--   注入内部bean -->
    <bean id="emp" class="com.atguigu.spring5.Emp">
        <property name="name" value="小花"></property>
        <property name="gender" value="女"></property>
        <property name="dept" >
            <bean id="dept" class="com.atguigu.spring5.Dept">
                <property name="dname" value="安保部"></property>
            </bean>
        </property>
    </bean>


    <!--   级联赋值1 -->
    <bean id="emp2" class="com.atguigu.spring5.Emp">
        <property name="name" value="小花"></property>
        <property name="gender" value="女"></property>
        <property name="dept" ref="dept2">
        </property>
    </bean>
    <bean id="dept2" class="com.atguigu.spring5.Dept">
        <property name="dname" value="测试部"></property>
    </bean>

    <!--   级联赋值2 -->
    <bean id="emp3" class="com.atguigu.spring5.Emp">
        <property name="name" value="小花"></property>
        <property name="gender" value="女"></property>
        <property name="dept" ref="dept3"></property>
        <property name="dept.dname" value="技术部"></property>
    </bean>
    <bean id="dept3" class="com.atguigu.spring5.Dept">
        <property name="dname" value="安保部"></property>
    </bean>

</beans>